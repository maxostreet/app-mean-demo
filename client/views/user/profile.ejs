<% include ../common/header %>

	<div class="page-header">
		<h1><span class="fa fa-user"></span> Profile Page</h1>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>email</strong>: <%= user.local.email %><br>
						<strong>password</strong>: <%= user.local.password %>
					</p>

			</div>
		</div>

		<!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
                    <p>
                        <strong>id</strong>: <%= user.facebook.id %><br>
                        <strong>email</strong>: <%= user.facebook.email %><br>
                        <strong>name</strong>: <%= user.facebook.name %>
                    </p>
                    <% if(!user.facebook.id){
                        %>
                        <a href="/auth/facebook"><button class="btn btn-default">Facebook Connect</button></a>
                        <%
                    } %>
                    <% if(user.facebook.id){
                        %>
                        <a href="/unlink/facebook"><button class="btn btn-default">Unlink Facebook</button></a>
                        <%
                    } %>
                    
            </div>
        </div>
	</div>

<% include ../common/footer %>
